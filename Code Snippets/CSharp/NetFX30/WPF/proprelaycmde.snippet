  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Define a relay command property with an event</Title>
      <Shortcut>proprelaycmde</Shortcut>
      <Description>Code snippet for a relay command property with an event.</Description>
      <Author>Leonard T. Erwine</Author>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>command</ID>
          <ToolTip>Command Name</ToolTip>
          <Default>MyClick</Default>
        </Literal>
        <Literal>
          <ID>field</ID>
          <ToolTip>Base Name for backing field</ToolTip>
          <Default>myClick</Default>
        </Literal>
      </Declarations>
      <Code Language="csharp">
<![CDATA[
public event EventHandler $command$;

private Commands.RelayCommand _$field$Command = null;

public Commands.RelayCommand $command$Command
{
    get
    {
        if (_$field$Command == null)
            _$field$Command = new Commands.RelayCommand(parameter =>
            {
              try { On$command$(parameter); }
              finally { $command$?.Invoke(this, EventArgs.Empty); }
            });
        return _$field$Command;
    }
}

protected virtual void On$command$(object parameter)
{
  // TODO: Implement On$command$ Logic
}

#endregion
$end$]]>
      </Code>
    </Snippet>
  </CodeSnippet>
